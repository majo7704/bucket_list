    <section class="sg-section" id="filters">
      <h2>01. Filters</h2>
      <div>
        <button class="toggle" type="button" data-toggle="filter">Filter by tags</button>
        <div class="filter js-hidden">
          <ul class="tags-list">
            <li><a href="#tag1" data-filter="tag-1">Tag 1</a></li>
            <li><a href="#tag2" data-filter="tag-2">Tag 2</a></li>
            <li>
              <a href="#tag3" class="selected" data-filter="tag-3">
                Tag 3
                <i class="remove-tag" data-remove-tag="tag-3">&times;</i>
              </a>
            </li>
            <li><a href="#tag4" data-filter="tag-4">Tag 4</a></li>
          </ul>
        </div>
      </div>
    </section>
    <section class="sg-section" id="ideas">
      <h2>02. Ideas</h2>
      <div>
        <ul class="bare-list float-grid css-grid">
        <% ["See the Northern Lights", "Swim with Dolphines", "Drive a Sport Car", "Dance like there is no tomorrow", nil].each do |title| %>
          <% if(title.present?) %>
          <li>
          <div class="card">
                <div class="card__thumb">
                  <a href="ideas/northern-lights.html">
                    <img src="http://fpoimg.com/255x170"
                         alt="Northern lights over mountain covered in snow">
                  </a>
                  <div class="card__intro">
                    <h4 class="card__title"><%= title%></h4>
                    <span>1,598 have done this</span>
                  </div>
                </div>
                <div class="card__footer">
                  <button class="card__btn card__like delta" data-like="see-the-northern-lights">
                    <svg class="icon-heart" role="presentation">
                      <use xlink:href="images/icons-defs.svg#heart"></use>
                    </svg>
                    Like
                  </button>
                  <button class="card__btn card__add delta" data-addGoal="see-the-northern-lights">
                    <svg class="icon-pluss" role="presentation">
                      <use xlink:href="images/icons-defs.svg#pluss"></use>
                    </svg>
                    Add Goal
                  </button>
                </div>
              </div>
            </li>
          <% end %> 
        <% end %>
          
        </ul>
      </div>
    </section>
    <section class="sg-section" id="create-goal">
      <h2>03. Create Goal</h2>
      <div>
        <form class="form--inpage" action="create-goal.html" method="post">
          <div class="alert alert--wide">
            Please fill out a title.<br />
            Please add an image.<br />
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="goal-title">Title</label>
            <input id="goal-title" class="input-group__field" type="text" name="goal-title"
              placeholder="E.g. Ride a camel">
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="goal-image">Add an image</label>
            <input id="goal-image" class="input-group__field" type="file" name="goal-image">
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="goal-tags">Add tags</label>
            <input id="goal-tags" class="input-group__field" type="text" name="goal-tags"
              placeholder="Separate multiple tags with commas">
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="goal-description">Description</label>
            <textarea id="goal-description" class="input-group__field"></textarea>
          </div>
          <%= render(partial: 'prompt', locals: {label: "Create a Goal"}) %>
          </div>
        </form>
      </div>
    </section>
    <section class="sg-section" id="edit-profile">
      <h2>04. Edit profile</h2>
      <div>
        <form class="form--inpage" action="profile.html" method="post">
          <div class="alert alert--wide">
            Please fill out a title.<br />
            Please add an image.<br />
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="full-name">Full name</label>
            <input id="full-name" class="input-group__field" type="text" name="full-name"
              placeholder="e.g. Diana Prince">
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="profile-image">Profile picture</label>
            <input id="profile-image" class="input-group__field" type="file" name="profile-image">
          </div>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="profile-description">Description</label>
            <textarea id="profile-description" class="input-group__field"></textarea>
          </div>
          <%= render(partial: 'prompt', locals: {label: "Update profile"}) %>
          
        </form>
      </div>
    </section>
    <section class="sg-section" id="login">
      <h2>05. Log in</h2>
      <section class="envelope">
        <header class="text--center">
          <h1 class="gamma">Log in</h1>
          <p>Not a member? <a href="sign-up.html">Sign Up</a></p>
        </header>
        <main>
          <form action="sign-in.html" method="post">
            <div class="alert">
              Incorrect email/password combination.
            </div>
            <div class="input-group">
              <label class="input-group__label" for="email">Email</label>
              <input id="email" class="input-group__field" type="email" name="email"
                placeholder="e.g. diana.prince@wonder.com">
            </div>
            <div class="input-group">
              <label class="input-group__label" for="password">Password</label>
              <input id="password" class="input-group__field" type="password" name="password">
            </div>
            <p><a href="forgot-password.html">Forgot password?</a></p>
            
            <div class="prompt">
              <button class="btn btn--primary prompt__confirm" type="submit">Log in</button>
            </div>
          </form>
        </main>
      </section>
    </section>
    <section class="sg-section" id="forgot">
      <h2>06. Forgot password</h2>
      <section class="envelope">
        <header class="text--center">
          <h1 class="gamma">Forgot Password?</h1>
          <p>
            Don't worry, it happens to the best of us. Enter your email address and we'll send you a link to reset it.
          </p>
        </header>

